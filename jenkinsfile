pipeline {
    agent any

     environment {
        AZURE_CREDENTIAL_ID = 'azuresp' // Replace with your Azure credential ID
        AZURE_TENANT_ID = 'tenant_id'
        AZURE_SUBSCRIPTION_ID = 'subscription_id'
        AZURE_CLIENT_SECRET = 'client_secret'

    }

    stages {
        stage('Authenticate') {
            steps {
                script {
                    azureCli('az login --service-principal -u ${env.AZURE_CREDENTIAL_ID} --tenant ${env.AZURE_TENANT_ID} --subscription ${env.AZURE_SUBSCRIPTION_ID} --client-secret ${env.AZURE_CLIENT_SECRET}')
                }
            }
        }
        stage('Checkout Code') {
            steps {
                // Checkout your Terraform code from a Git repository
                git branch: 'main', url: 'https://github.com/hadoopblr/devops.git'
            }
        }

        stage('Terraform Init') {
            steps {
                // Initialize Terraform
                sh "terraform init"
            }
        }

        stage('Terraform Plan') {
            steps {
                // Plan the Terraform changes
                sh "terraform plan"
            }
        }

        stage('Terraform Apply') {
            steps {
                // Apply the Terraform changes
                sh "terraform apply"
            }
        }
    }
}
